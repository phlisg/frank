#!/bin/bash

echo ""
echo "# phlisg/frank shell helpers:"
echo ""
echo "activate() {"
echo "  source ./frank/scripts/activate"
echo "}"
echo ""
echo "up() {"
echo "  just up && source <(just _activate)"
echo "}"
echo ""
echo "down() {"
echo "  just down"
echo "  if [ -n \"\$LARAVEL_DOCKER_ENV_ACTIVE\" ]; then"
echo "    deactivate"
echo "  fi"
echo "}"
echo ""